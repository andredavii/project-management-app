
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Projects", projects_path %></a></li>
    <li class="breadcrumb-item"><%= link_to @project.name, project_path(@project) %></a></li>
    <li class="breadcrumb-item active" aria-current="page">Tasks</li>
  </ol>
</nav>

<p style="color: green"><%= notice %></p>

<h1><%= @project.name %> - Tasks</h1>
<br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Due Date</th>
      <th>Complete</th>
      <th>Overdue</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.due_date %></td>
        <td><%= task.complete? %></td>
        <td><%= task.overdue? %></td>
        <td>
          <% if task.overdue? %>
            <span class="badge text-bg-danger">Overdue</span>
          <% elsif task.complete? %>
            <span class="badge text-bg-success">Complete</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New task", new_project_task_path(@project) %>
